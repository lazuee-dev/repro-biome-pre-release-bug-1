{
    "compilerOptions": {
      "esModuleInterop": true,
      "isolatedModules": true,
      "lib": ["ES2022"],
      "libReplacement": false,
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "ESNext",
      "types": ["node"],
      "verbatimModuleSyntax": true
    },
    "exclude": ["node_modules"],
    "include": ["src"],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
      "transpileOnly": true
    }
  }
  